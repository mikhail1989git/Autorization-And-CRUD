@model AutorizationAndCRUD.Models.User
@{
    ViewData["Title"] = "Registration";
}
<link rel="stylesheet" href="~/css/site.css">

<div class="authorization">
<h2>Registration</h2>
<form asp-action="Registration" asp-controller="home" method="post">
    <table>
        <tr>
            <td><input type="text" name="login" value="" placeholder="Login" /></td>
        </tr>
        <tr>
            <td><input type="password" name="password" value="" placeholder="Password" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Зарегистрироваться"/></td>
        </tr>
    </table>
</form>
</div>