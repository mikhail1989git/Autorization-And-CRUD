@model IEnumerable<AutorizationAndCRUD.Models.Product>
@{ 
    ViewData["Title"] = "Product List";
}
<link rel="stylesheet" href="~/css/site.css">

<div class="page">
<h2>Список товаров</h2>
<p><a asp-action="Create" asp-controller="Products">Добавить товар</a></p>
<table>
    <tr><th>Название</th><th>Цена</th><th>Описание</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Products" asp-action="Delete" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
</div>